<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">
    <changeSet  id="07.12.2020 15:06:01"  author="burak">
        <createTable tableName="product">
            <column type="int(20)" name="id" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column type="nvarchar(50)" name="name"></column>
            <column type="nvarchar(250)" name="description"></column>
            <column type="float" name="sales_price"></column>
            <column type="float" name="purchase_price"></column>
            <column name="media_id" type="int">
                <constraints  foreignKeyName="fk_media_product_id" references="media(id)"/>
            </column>

        </createTable>
    </changeSet>



</databaseChangeLog>